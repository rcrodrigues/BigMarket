.container-fluid
	.row
		.col-sm-3
			.jumbotron
				.form-horizontal
					fieldset
						legend Filtros
						form#productFilter
							.col-md-12
								.form-group
									label.control-label(for="productName") Nome do Produto
									input#productName.form-control(ng-model="productFilter.name",type="text",style="width:100%")

							.row
								.col-md-12
									a.btn.btn-primary.pull-right Pesquisar
										i.material-icons search
		.col-sm-9
			.col-md-6.col-lg-4(ng-repeat="product in productList")
				.jumbotron
					label Product {{$index}}
