.container-fluid
	.row
		.col-sm-3
			.jumbotron
				.form-horizontal
					fieldset
						legend Filtros
						form#productFilter
							.col-md-12
								.form-group.label-floating.is-empty
									label.control-label(for="productName") Nome do Produto
									input#productName.form-control(ng-model="productFilter.name",type="text",style="width:100%")
								.form-group	
									.togglebutton
										label
											input(type="checkbox", checked) Toggle Button
											span.toggle
							.row
								.col-md-12
									a.btn.btn-primary.pull-right Pesquisar
										i.material-icons search

		.col-sm-9
			.col-md-6.col-lg-3(ng-repeat="product in productList",ng-animate="animate")
				.jumbotron.noPadding.fill(ng-click="#/",)
					img(src="{{product.imagem}}")
					.cardBottomLeftInfo
						{{product.nome}}
					.cardTopRightInfo
						.badge
							{{product.preco | customCurrency}}
					
					
